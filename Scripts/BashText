#!/bin/bash

art=$(cat <<EOF
\e[38;2;0;255;64m   ▄▄▄▄▄▄▄   ▄▄▄▄▄   ▄▄▄▄▄▄▄     ▄▄▄   ▄▄▄    ▄▄▄▄▄▄▄   ▄▄▄▄▄▄▄         ▄▄▄▄▄      ▄▄▄▄▄▄▄\e[0m
\e[38;2;0;255;89m  ███▀▀▀▀▀    ███    ███▀▀███▄   ███   ███   ███▀▀▀▀▀   ███▀▀███▄     ▄███████▄   █████▀▀▀\e[0m
\e[38;2;0;255;115m  ███         ███    ███▄▄███▀   █████████   ███▄▄      ███▄▄███▀     ███   ███    ▀████▄ \e[0m
\e[38;2;0;255;140m  ███         ███    ███▀▀▀▀     ███▀▀▀███   ███        ███▀▀██▄      ███▄▄▄███      ▀████\e[0m
\e[38;2;0;255;153m  ▀███████   ▄███▄   ███         ███   ███   ▀███████   ███  ▀███      ▀█████▀    ███████▀\e[0m
EOF
)

cols=$(tput cols)

while IFS= read -r line; do
  clean_line=$(sed 's/\x1b\[[0-9;]*m//g' <<< "$line")
  padding=$(( (cols - ${#clean_line}) / 2 ))
  (( padding < 0 )) && padding=0
  printf "%*s%b\n" "$padding" "" "$line"
done <<< "$art"

