#!/usr/bin/env bash

# Get current workspace ID
CURRENT=$(hyprctl activeworkspace -j | jq -r '.id')

case "$1" in
    up)
        if [ "$CURRENT" -lt 9 ]; then
            hyprctl dispatch workspace $((CURRENT + 1))
        fi
        ;;
    down)
        if [ "$CURRENT" -gt 1 ]; then
            hyprctl dispatch workspace $((CURRENT - 1))
        fi
        ;;
    *)
        echo "Usage: $0 {up|down}"
        exit 1
        ;;
esac

